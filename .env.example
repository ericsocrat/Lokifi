# Lokifi Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env files to git!

# =============================================================================
# IMPORTANT: Get your own API keys from the respective services
# This file shows what variables are needed, NOT actual keys
# =============================================================================

# -----------------------------------------------------------------------------
# Trading & Market Data APIs
# -----------------------------------------------------------------------------

# Polygon.io - Stock market data
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Alpha Vantage - Stock market data
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# Finnhub - Real-time market data
# Get your key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# CoinGecko - Cryptocurrency data
# Get your key at: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your_coingecko_api_key_here

# -----------------------------------------------------------------------------
# News & Content APIs
# -----------------------------------------------------------------------------

# NewsAPI - News articles and headlines
# Get your key at: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# MarketAux - Financial news and market data
# Get your key at: https://www.marketaux.com/
MARKETAUX_API_KEY=your_marketaux_api_key_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database connection string
# Examples:
#   PostgreSQL: postgresql://user:password@localhost:5432/lokifi
#   MongoDB: mongodb://user:password@localhost:27017/lokifi
#   SQLite: sqlite:///./lokifi.db
DATABASE_URL=sqlite:///./lokifi.db

# Redis connection (for caching)
REDIS_URL=redis://:23233@localhost:6379/0
REDIS_PASSWORD=23233

# -----------------------------------------------------------------------------
# Next.js Configuration
# -----------------------------------------------------------------------------

# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Next.js environment
NODE_ENV=development

# Next.js port
PORT=3000

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------

# Backend API settings
API_HOST=0.0.0.0
API_PORT=8000

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your_random_jwt_secret_here_min_32_chars

# Session secret
SESSION_SECRET=your_random_session_secret_here

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Cookie secret
COOKIE_SECRET=your_random_cookie_secret_here

# -----------------------------------------------------------------------------
# Optional: Third-party Services
# -----------------------------------------------------------------------------

# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
# NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Stripe (payments)
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# SendGrid (email)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# -----------------------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------------------

# Enable debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Feature flags
FEATURE_SOCIAL_FEED=true
FEATURE_AI_INSIGHTS=true
FEATURE_PAPER_TRADING=true

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
#
# 1. Copy this file to .env in the same directory
# 2. Fill in your actual API keys and secrets
# 3. Never commit .env files to git
# 4. Keep your API keys secret and rotate them regularly
# 5. Use different keys for development and production
#
# For production deployment:
# - Use GitHub Secrets for CI/CD
# - Use environment variables in your hosting platform
# - Never hardcode secrets in your code
#
