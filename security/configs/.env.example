# Fynix Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED SECURITY SETTINGS
# ==========================================
# JWT Secret - Use a strong random string for production
FYNIX_JWT_SECRET=your-super-secure-jwt-secret-here-change-this

# Alternative JWT Secret Key (for backward compatibility)
JWT_SECRET_KEY=your-super-secure-jwt-secret-here-change-this

# Application Secret Key
SECRET_KEY=your-super-secure-app-secret-key-here-change-this

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=sqlite+aiosqlite:///./data/fynix.sqlite
DATABASE_REPLICA_URL=
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ==========================================
# JWT CONFIGURATION
# ==========================================
FYNIX_JWT_TTL_MIN=1440
JWT_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# ==========================================
# APPLICATION SETTINGS
# ==========================================
PROJECT_NAME=Fynix
API_PREFIX=/api
ENVIRONMENT=development
DEBUG=true

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_ORIGIN=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_SENTINEL_HOSTS=[]
REDIS_SENTINEL_SERVICE=mymaster

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=false
FROM_EMAIL=noreply@fynix.com

# ==========================================
# OAUTH PROVIDERS
# ==========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==========================================
# AI PROVIDERS
# ==========================================
OPENROUTER_API_KEY=
HUGGING_FACE_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=
OPENAI_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ==========================================
# EXTERNAL API KEYS (OPTIONAL)
# ==========================================
POLYGON_KEY=
ALPHAVANTAGE_KEY=
FINNHUB_KEY=
COINGECKO_KEY=
CMC_KEY=
NEWSAPI_KEY=
MARKETAUX_KEY=
FMP_KEY=

# ==========================================
# CLOUD STORAGE (OPTIONAL)
# ==========================================
AWS_S3_BUCKET=
AWS_CLOUDFRONT_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ==========================================
# DATA ARCHIVAL SETTINGS
# ==========================================
ENABLE_DATA_ARCHIVAL=false
ARCHIVE_THRESHOLD_DAYS=365
DELETE_THRESHOLD_DAYS=2555

# ==========================================
# MONITORING & INFRASTRUCTURE
# ==========================================
# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Redis Web Interface Password
REDIS_WEB_PASSWORD=your-secure-redis-web-password

# Production Database Password (if using PostgreSQL)
POSTGRES_PASSWORD=your-secure-postgres-password

# ==========================================
# PRODUCTION DEPLOYMENT
# ==========================================
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=INFO
MAX_WORKERS=4
WORKER_TIMEOUT=30

# ==========================================
# SECURITY NOTES
# ==========================================
# 1. Never commit this file with real secrets to version control
# 2. Use strong, randomly generated passwords for all secrets
# 3. Rotate secrets regularly
# 4. Use different secrets for different environments
# 5. Consider using a secret management service for production
