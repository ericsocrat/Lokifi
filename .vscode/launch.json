{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Backend: FastAPI (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend",
        "LOKIFI_JWT_SECRET": "KJlAjdLJAWgwND2c9bOxhuoc9ZfM0tMeTnDu8viMvH+lvGDGr9tMlFYLb4Sl4t5lVwcH+W8hRSSha9gZ2otcXg=="
      },
      "justMyCode": false
    },
    {
      "name": "üöÄ Backend: FastAPI (Production Mode)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--no-reload"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend",
        "LOKIFI_JWT_SECRET": "KJlAjdLJAWgwND2c9bOxhuoc9ZfM0tMeTnDu8viMvH+lvGDGr9tMlFYLb4Sl4t5lVwcH+W8hRSSha9gZ2otcXg=="
      },
      "justMyCode": true
    },
    {
      "name": "üêç Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": true
    },
    {
      "name": "üß™ Python: Pytest (Current File)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "-s", "--tb=short"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": false
    },
    {
      "name": "üß™ Python: Pytest (All Tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--tb=short", "--cov=app", "--cov-report=html"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": false
    },
    {
      "name": "üóÑÔ∏è  Database: Alembic Migrate",
      "type": "debugpy",
      "request": "launch",
      "module": "alembic",
      "args": ["upgrade", "head"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "üîç Debug: Attach to Python Process",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "."
        }
      ]
    }
  ]
}
