{
  // ============================================
  // LOKIFI WORKSPACE SETTINGS - OPTIMIZED
  // Optimized for: Next.js + FastAPI + Testing
  // Updated: October 10, 2025
  // ============================================

  // ===== EDITOR - PERFORMANCE & UX =====
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.snippetSuggestions": "top",
  "editor.wordWrap": "off",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 120,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.parameterHints.enabled": true,
  "editor.renderWhitespace": "selection",
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.maxTokenizationLineLength": 20000,

  // ===== FILES - AUTO-SAVE & EXCLUSIONS =====
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/__pycache__/**": true,
    "**/coverage/**": true,
    "**/.lokifi-cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/site-packages/**": true,
    "**/.pytest_cache/**": true,
    "**/htmlcov/**": true,
    "**/*.log": true,
    "**/logs/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/coverage": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // ===== SEARCH - SMART EXCLUSIONS =====
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/__pycache__": true,
    "**/coverage": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "**/.lokifi-cache": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/*.log": true,
    "**/.venv": true,
    "**/venv": true
  },
  "search.useIgnoreFiles": true,
  "search.smartCase": true,
  "search.followSymlinks": false,

  // ===== TYPESCRIPT / JAVASCRIPT - FORMATTING =====
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsdk": "apps/frontend/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.paths": true,
  "typescript.suggest.paths": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "typescript.suggest.completeFunctionCalls": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.log": "off",
  "typescript.surveys.enabled": false,

  // ===== PYTHON - BACKEND CONFIGURATION =====
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.rulers": [100]
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.memory.keepLibraryAst": false,
  "python.analysis.persistAllIndices": false,
  "python.defaultInterpreterPath": "${workspaceFolder}/apps/backend/venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/apps/backend/.env",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.pytestArgs": [
    "apps/backend/tests"
  ],
  "python.languageServer": "Pylance",
  "python.linting.enabled": false,
  "python.analysis.indexing": false,
  "isort.args": ["--profile", "black"],
  "black-formatter.args": ["--line-length", "100"],

  // ===== VITEST (NEW!) =====
  "vitest.enable": true,
  "vitest.commandLine": "npm run test",
  "vitest.include": ["**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/cypress/**",
    "**/.{idea,git,cache,output,temp}/**"
  ],

  // ===== PLAYWRIGHT (NEW!) =====
  "playwright.reuseBrowser": false,
  "playwright.showTrace": false,

  // ===== COVERAGE GUTTERS (NEW!) =====
  "coverage-gutters.coverageFileNames": [
    "coverage/lcov.info",
    "coverage/coverage.json",
    "apps/frontend/coverage/lcov.info"
  ],
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.highlightdark": "rgba(16, 185, 129, 0.15)",
  "coverage-gutters.highlightlight": "rgba(16, 185, 129, 0.15)",

  // ===== CONSOLE NINJA (NEW!) =====
  "console-ninja.featureSet": "Community",
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-server-extension": true,
    "live-preview-extension": true
  },

  // ===== IMPORT COST (NEW!) =====
  "importCost.bundleSizeDecoration": "both",
  "importCost.showCalculatingDecoration": true,
  "importCost.smallPackageSize": 50,
  "importCost.mediumPackageSize": 100,
  "importCost.largePackageColor": "#ff6b6b",
  "importCost.mediumPackageColor": "#feca57",
  "importCost.smallPackageColor": "#48dbfb",

  // ===== ESLINT - LINTING =====
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    { "directory": "./apps/frontend", "changeProcessCWD": true }
  ],
  "eslint.format.enable": false,
  "eslint.codeActionsOnSave.mode": "all",

  // ===== PRETTIER =====
  "prettier.enable": true,
  "prettier.requireConfig": true,

  // ===== ERROR LENS - INLINE ERRORS =====
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.excludeBySource": [
    "cSpell"
  ],
  "errorLens.fontWeight": "normal",
  "errorLens.fontSize": "0.9em",
  "errorLens.delay": 500,
  "errorLens.followCursor": "activeLine",

  // ===== TAILWIND CSS =====
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // ===== GIT & GITLENS - VERSION CONTROL =====
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "push",
  "git.autofetchPeriod": 180,
  "git.pruneOnFetch": true,
  "git.untrackedChanges": "separate",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.statusBar.enabled": true,
  "gitlens.blame.avatars": false,
  "gitlens.blame.format": "${message|40?} ${agoOrDate|14-}",
  "gitlens.blame.highlight.enabled": false,
  "gitlens.changes.locations": ["line"],
  "gitlens.heatmap.toggleMode": "file",
  "gitlens.views.repositories.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.lineHistory.avatars": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.contributors.avatars": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,

  // ===== DOCKER =====
  "docker.showExplorer": true,

  // ===== TODO TREE - ENHANCED TASK TRACKING =====
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "HACK",
    "NOTE",
    "XXX",
    "TASK",
    "TEST",
    "COVERAGE",
    "REFACTOR",
    "OPTIMIZE",
    "CRITICAL",
    "HIGH",
    "MEDIUM",
    "LOW",
    "DONE",
    "[ ]",
    "[x]"
  ],
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.revealBehaviour": "start of todo",
  "todo-tree.general.tagGroups": {
    "CRITICAL": ["CRITICAL", "FIXME", "BUG"],
    "TASKS": ["TODO", "TASK", "HACK"],
    "TESTING": ["TEST", "COVERAGE"],
    "QUALITY": ["OPTIMIZE", "REFACTOR"],
    "INFO": ["NOTE", "XXX"]
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\*))\\s*($TAGS)",
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text-and-comment",
    "foreground": "#ffffff",
    "background": "#feca57",
    "opacity": 50,
    "iconColour": "#feca57",
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#48dbfb",
      "iconColour": "#48dbfb"
    },
    "TASK": {
      "icon": "tasklist",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#00aa00",
      "iconColour": "#00aa00"
    },
    "FIXME": {
      "icon": "flame",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ff6b6b",
      "iconColour": "#ff6b6b"
    },
    "BUG": {
      "icon": "bug",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ff6b6b",
      "iconColour": "#ff6b6b"
    },
    "CRITICAL": {
      "icon": "alert",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ff0000",
      "iconColour": "#ff0000"
    },
    "TEST": {
      "icon": "beaker",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#00ced1",
      "iconColour": "#00ced1"
    },
    "COVERAGE": {
      "icon": "graph",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#32cd32",
      "iconColour": "#32cd32"
    },
    "REFACTOR": {
      "icon": "sync",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#4169e1",
      "iconColour": "#4169e1"
    },
    "OPTIMIZE": {
      "icon": "zap",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#9370db",
      "iconColour": "#9370db"
    },
    "NOTE": {
      "icon": "note",
      "type": "text-and-comment",
      "foreground": "#000",
      "background": "#ffff00",
      "iconColour": "#ffff00"
    },
    "HACK": {
      "icon": "tools",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ff8c00",
      "iconColour": "#ff8c00"
    },
    "DONE": {
      "icon": "check-circle",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#00aa00",
      "iconColour": "#00aa00"
    },
    "HIGH": {
      "icon": "arrow-up",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ff6347",
      "iconColour": "#ff6347"
    },
    "MEDIUM": {
      "icon": "dash",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#ffa500",
      "iconColour": "#ffa500"
    },
    "LOW": {
      "icon": "arrow-down",
      "type": "text-and-comment",
      "foreground": "#fff",
      "background": "#90ee90",
      "iconColour": "#90ee90"
    }
  },
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/**",
    "**/.next/**",
    "**/coverage/**",
    "**/.pytest_cache/**",
    "**/dist/**",
    "**/build/**",
    "**/venv/**",
    "**/__pycache__/**",
    "**/.git/**",
    "**/htmlcov/**",
    "**/.lokifi-cache/**"
  ],
  "todo-tree.filtering.includeGlobs": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.py",
    "**/*.md",
    "**/*.json",
    "**/*.yaml",
    "**/*.yml"
  ],
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.showBadges": true,
  "todo-tree.tree.grouped": true,
  "todo-tree.tree.expanded": true,
  "todo-tree.tree.flat": false,
  "todo-tree.tree.sort": true,
  "todo-tree.tree.tagsOnly": false,
  "todo-tree.tree.hideIconsWhenGroupedByTag": false,

  // ===== TERMINAL =====
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "terminal.integrated.enablePersistentSessions": true,

  // ===== PERFORMANCE - OPTIMIZATIONS =====
  "files.maxMemoryForLargeFilesMB": 4096,
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.experimental.useAutoProfilingMode": true,
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  "git.decorations.enabled": true,
  "git.timeline.showUncommitted": false,
  "scm.diffDecorations": "gutter",
  "scm.diffDecorationsGutterWidth": 3,
  "editor.codeLens": true,
  "diffEditor.codeLens": false,

  // ===== GITHUB COPILOT - AI ASSISTANCE =====
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.chat.useProjectTemplates": false,

  // ===== WORKBENCH - UI PREFERENCES =====
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,
  "workbench.activityBar.location": "default",
  "problems.autoReveal": false,

  // ===== FILE EXPLORER - FILE NESTING =====
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.map",
    "*.tsx": "${capture}.test.tsx, ${capture}.module.css, ${capture}.stories.tsx",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.test.jsx",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .npmrc, .yarnrc",
    ".env": ".env.*, .envrc",
    "tsconfig.json": "tsconfig.*.json",
    "vite.config.*": "vitest.config.*",
    "tailwind.config.*": "postcss.config.*",
    "README.md": "README.*, LICENSE, CHANGELOG.md"
  },

  // ===== NPM - PACKAGE MANAGEMENT =====
  "npm.packageManager": "npm",
  "npm.fetchOnlinePackageInfo": false,
  "npm.autoDetect": "on",
  "npm.runSilent": false,

  // ===== BREADCRUMBS =====
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // ===== SECURITY =====
  "security.workspace.trust.untrustedFiles": "prompt",

  // ===== EMMET - HTML/CSS SHORTCUTS =====
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // ===== PATH INTELLISENSE =====
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,

  // ===== MARKDOWN =====
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // ===== YAML =====
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },

  // ===== SQL =====
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.tabSize": 2
  },

  // ===== POWERSHELL =====
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.encoding": "utf8bom"
  },

  // ===== VERSION LENS =====
  "versionlens.suggestions.showOnStartup": false,
  "versionlens.npm.caching.duration": 3600,
  "versionlens.pip.caching.duration": 3600,
  "versionlens.suggestions.showPrerelease": false
}
